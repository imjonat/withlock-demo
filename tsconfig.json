{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "dist/",
    "typeRoots": [
      "typings",
      "./node_modules/@types/"
    ],
    "lib": [
      "es2017", "dom"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

